@page
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

<!DOCTYPE html>
<html lang="ru" >
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>генератор мемов</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/memeEdit.css" asp-append-version="true">
    <link rel="icon" href="~/ico/favico.ico" type="image/x-icon">

</head>
<body id="body" onload="EditMeme()">
    <div id="drop-zone">
        <div class="inhint">перетащите файлы сюда</div>
        
    </div>
    <header>
        <h1>Генератор мемов</h1>
        <p>Готовые шаблоны</p>
    </header>
    <div class="amain">

        <main id="main">

            <form action="" method="post" class="editCard" id="FormF" enctype="multipart/form-data">
                <div class="ed_card">
                    <img src="" id="EdImg" class="ed_img" onload="canRes()"> 
                    <textarea name="top" value="" placeholder="верхний текст" oninput="canDraw()" class="toptext" id="toptext"></textarea>
                    <textarea name="bottom" value="" placeholder="нижний текст" oninput="canDraw()" class="bottomtext" id="bottomtext"></textarea>
                </div>
                
                <canvas id="canvas" class="main_canvas"></canvas>
                 
                <br />
                <label class="file-input-label">
                    Выбрать файл
                    <input type="file" name="Img" value="" onchange="ImgCng()" id="ImgPath" />
                </label>

                <br />
                <input type="text" name="id" value="0" style="display:none;" />
                <a href="" class="file-input-label" id="downlink">скачать изображение</a> <br />
                <label>контекст/комментарий</label>
                <textarea name="name" value="" id="text"></textarea>
                <button class="textbtn" type="button" id="textbtn" onclick="ai()">сгенерировать мем</button>
                   
            </form>


        </main>
    </div>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/script.js" asp-append-version="true"></script>